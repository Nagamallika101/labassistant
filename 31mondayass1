#include<stdio.h>
int main()
{
    int first,last,middle,size,selement,list[100];
    printf("enter the size of the list:");
    scanf("%d",&size);
    printf("enter %d integer values in ascending order\n",size);
    for(i=0;i<size;i++)
    scanf("%d",&list[i]);
    printf("enter value to be search:");
    scanf("%d",&element);
    first=0;
    last=size-1;
    middle=(first+last)/2;
    while(first<=last)
    {
        if(list[middle]<selement)
        first=middle+1;
        else if(list[middle]==selement)
        printf("element found at index %d \n",middle);
        break;
    }
    else
    last=middle-1;
    middle=(first+last)/2;
    if(first>last)
    printf("element not found in the list:");
    return 0;
}

    




